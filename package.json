  "version": "1.0.0",
  "author": "Andreas Heuermann",
  "license": "OSMC-PL-1-8",
  "engines": {
    "node": ">=20.0.0"
  },
  "private": true,
  "main": "lib/setup-openmodelica.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
